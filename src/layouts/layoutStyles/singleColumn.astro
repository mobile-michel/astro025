---
import PageLayout from '../../layouts/astrodocLayout.astro'
import Aside from '../../components/mainComponents/aside.astro'
import {NAV_STYLE} from '../config.ts'
const { content } = Astro.props
---
<PageLayout content={content}>
			<section class="prose prose-sm md:prose-base xl:prose-xl max-w-none">
				<h2>{content.title}</h2>
				<slot />
			</section>
			<Aside />
</PageLayout>



<style is:global>
	body {
		@apply min-h-screen flex flex-col
	}
	header, footer {
		@apply p-4
	}
	main {
		@apply grow mx-auto flex flex-col md:flex-row p-4 lg:w-5/6
	}
	aside {
		@apply p-4 border
	}
	#grid-main {
		@apply grow p-4 border
	}
</style>